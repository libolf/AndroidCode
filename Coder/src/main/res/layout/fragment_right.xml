<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fragment_mine_background"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/toolbar_gradient_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fragment_mine_white_background"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:paddingBottom="15dp"
        android:background="#FFFCFCFC"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/fragment_mine_background"
        app:layout_constraintRight_toRightOf="@id/fragment_mine_background"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_background"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/fragment_mine_icon"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:elevation="5dp"
        android:src="@drawable/pic_id"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mine_white_background"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="@id/fragment_mine_white_background"
        app:layout_constraintRight_toRightOf="@id/fragment_mine_white_background"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_background"
        app:layout_constraintVertical_bias="0.45" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFF5F5FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_mine_background" />

    <TextView
        android:id="@+id/fragment_mine_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="我的"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@id/fragment_mine_white_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/fragment_mine_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:paddingEnd="8dp"
        android:paddingStart="15dp"
        android:text="我的ID：8041E931"
        android:textColor="#FF49494D"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/fragment_mine_icon"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_white_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_level_backgeound"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:text="L6"
        android:textColor="#FFA7A7B9"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mine_id"
        app:layout_constraintLeft_toRightOf="@id/fragment_mine_id"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_id" />

    <TextView
        android:id="@+id/fragment_mine_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="15dp"
        android:text="查看我的秘钥"
        android:textColor="#FFC1C1D6"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/fragment_mine_id"
        app:layout_constraintTop_toBottomOf="@id/fragment_mine_id" />

    <ImageView
        android:layout_width="7dp"
        android:layout_height="12dp"
        android:elevation="5dp"
        android:src="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mine_key"
        app:layout_constraintLeft_toRightOf="@id/fragment_mine_key"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_key" />

    <TextView
        android:id="@+id/fragment_mine_block_index_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:gravity="center"
        android:text="区块高度"
        android:textColor="#FF49494D"
        android:textSize="13sp"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="@id/fragment_mine_white_background"
        app:layout_constraintRight_toLeftOf="@id/fragment_mine_usable_flow_title"
        app:layout_constraintBottom_toTopOf="@id/fragment_mine_block_index"/>

    <TextView
        android:id="@+id/fragment_mine_block_index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:gravity="center"
        android:text="7890"
        android:textColor="#FFB8B8CC"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="@id/fragment_mine_white_background"
        app:layout_constraintRight_toLeftOf="@id/fragment_mine_usable_flow"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mine_white_background"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/fragment_mine_usable_flow_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:gravity="center"
        android:text="可用流量"
        android:textColor="#FF49494D"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/fragment_mine_block_index_title"
        app:layout_constraintRight_toLeftOf="@id/fragment_mine_lock_flow_title"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_block_index_title" />

    <TextView
        android:id="@+id/fragment_mine_usable_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:gravity="center"
        android:text="652.31MB"
        android:textColor="#FFB8B8CC"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/fragment_mine_block_index"
        app:layout_constraintRight_toLeftOf="@id/fragment_mine_lock_flow"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_block_index" />

    <TextView
        android:id="@+id/fragment_mine_lock_flow_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:gravity="center"
        android:text="锁定流量"
        android:textColor="#FF49494D"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/fragment_mine_usable_flow_title"
        app:layout_constraintRight_toRightOf="@id/fragment_mine_white_background"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_block_index_title" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:elevation="5dp"
        android:src="@drawable/btn_what"
        app:layout_constraintBottom_toBottomOf="@id/fragment_mine_lock_flow_title"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_lock_flow_title" />

    <TextView
        android:id="@+id/fragment_mine_lock_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:gravity="center"
        android:text="13.62MB"
        android:textColor="#FFB8B8CC"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/fragment_mine_usable_flow"
        app:layout_constraintRight_toRightOf="@id/fragment_mine_white_background"
        app:layout_constraintTop_toTopOf="@id/fragment_mine_block_index" />

    <LinearLayout
        android:id="@+id/fragment_mine_bottom_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFCFCFC"
        android:divider="@drawable/divider_linear_background"
        android:dividerPadding="15dp"
        android:elevation="5dp"
        android:paddingBottom="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_mine_white_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:id="@+id/fragment_mine_flow_account_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/btn_bill" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/fragment_mine_flow_account_icon"
                android:paddingEnd="0dp"
                android:paddingStart="12dp"
                android:text="流量账单"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="27dp"
                android:src="@drawable/btn_back_mine" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/fragment_mine_flow_share_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/btn_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/fragment_mine_flow_share_icon"
                android:paddingEnd="0dp"
                android:paddingStart="12dp"
                android:text="流量分享"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="27dp"
                android:src="@drawable/btn_back_mine" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/fragment_mine_setting_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/btn_setup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/fragment_mine_setting_icon"
                android:paddingEnd="0dp"
                android:paddingStart="12dp"
                android:text="设置"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="27dp"
                android:src="@drawable/btn_back_mine" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/fragment_mine_about_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/btn_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/fragment_mine_about_icon"
                android:paddingEnd="0dp"
                android:paddingStart="12dp"
                android:text="关于"
                android:textColor="#FF333333"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="27dp"
                android:src="@drawable/btn_back_mine" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_mine_bottom_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFCFCFC"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_index_vpn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="VPN"
                android:textColor="#FFCBCBD6"
                android:textSize="6sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="挖币"
                android:textColor="#FFCBCBD6"
                android:textSize="6sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_mine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="我的"
                android:textColor="#FFCBCBD6"
                android:textSize="6sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>