<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SkinActivity">

    <include layout="@layout/toolbar_back_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/skin_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item1"
            android:textColor="#aaaaaa"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/skin_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/skin_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item1"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/skin_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

    <Button
        android:id="@+id/skin_change_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插件换肤" />

    <Button
        android:id="@+id/skin_reset_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置" />

</LinearLayout>