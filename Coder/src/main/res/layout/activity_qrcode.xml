<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.QRCodeActivity">

    <include layout="@layout/toolbar_back_layout" />

    <EditText
        android:id="@+id/qr_code_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input" />

    <Button
        android:id="@+id/qr_code_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新建" />

    <Button
        android:id="@+id/qr_code_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存" />

    <Button
        android:id="@+id/qr_code_recognition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="识别" />

    <TextView
        android:id="@+id/qr_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="二维码内容：" />

    <ImageView
        android:id="@+id/qr_code_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

</LinearLayout>